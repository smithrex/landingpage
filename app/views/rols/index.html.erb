<p id="notice"><%= notice %></p>

<h1>Rols</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rols.each do |rol| %>
      <tr>
        <td><%= rol.nombre %></td>
        <td><%= link_to 'Mostrar', rol, class: "btn btn-primary mb-4" %></td>
        <td><%= link_to 'Editar', edit_rol_path(rol), class: "btn btn-secondary mb-4" %></td>
        <td><%= link_to 'Eliminar', rol, method: :delete, data: { confirm: 'estas seguro?' }, class: "btn btn-danger mb-4" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Rol', new_rol_path, class: "btn btn-primary mb-4" %>
