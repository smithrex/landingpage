<p id="notice"><%= notice %></p>

<h1>Rol Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rol_usuarios.each do |rol_usuario| %>
      <tr>
        <td><%= rol_usuario.user_id %></td>
        <td><%= rol_usuario.rol_id %></td>
        <td><%= link_to 'Mostrar', rol_usuario, class: "btn btn-primary mb-4" %></td>
        <td><%= link_to 'Editar', edit_rol_usuario_path(rol_usuario),
        class: "btn btn-secondary mb-4" %></td>
        <td><%= link_to 'Eliminar', rol_usuario, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-danger mb-4" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Rol Usuario', new_rol_usuario_path, class: "btn btn-primary mb-4" %>
