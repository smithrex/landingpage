<div class="container">
  <div class="row">
    <div class="col">
      <p>
        <strong>Nombre:</strong>
        <%= @proyecto.nombre %>
      </p>

      <p>
        <strong>Imagen:</strong>
        <%= @proyecto.imagen %>
      </p>

      <%= link_to 'Editar', edit_proyecto_path(@proyecto),
      class: "btn btn-primary mb-4" %> |
      <%= link_to 'Volver', proyectos_path,
      class: "btn btn-secondary mb-4" %>
    </div>
  </div>
</div>
