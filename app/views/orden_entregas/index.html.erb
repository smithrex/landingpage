<p id="notice"><%= notice %></p>

<h1>Orden Entregas</h1>

<table>
  <thead>
    <tr>
      <th>Orden</th>
      <th>Fecha</th>
      <th>Instrucciones</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orden_entregas.each do |orden_entrega| %>
      <tr>
        <td><%= orden_entrega.orden_id %></td>
        <td><%= orden_entrega.fecha %></td>
        <td><%= orden_entrega.instrucciones %></td>
        <td><%= orden_entrega.direccion %></td>
        <td><%= link_to 'Mostrar', orden_entrega, class: "btn btn-primary mb-4" %></td>
        <td><%= link_to 'Editar', edit_orden_entrega_path(orden_entrega), class: "btn btn-secondary mb-4" %></td>
        <td><%= link_to 'Eliminar', orden_entrega, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-danger mb-4" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Orden Entrega', new_orden_entrega_path %>
