<div class="row">
  <div class="col-4">
    <div class="card">
      <div class="card-header">
        Opciones
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a href="/clientes/<%= @cliente.id %>/?vista=perfil">Mi Perfil</a>
        </li>
        <li class="list-group-item">
          <a href="/clientes/<%= @cliente.id %>/?vista=ordenes">Ordenes</a>
        </li>
        <li class="list-group-item">
          <a href="#">Cambiar Contrasena</a>
        </li>
        <li class="list-group-item">
          <a href="#">Salir</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        Mi Perfil
      </div>
      <div class="card-body">
        <% if @vista == "perfil" %>
          <%= render 'form', cliente: @cliente %>
         <% elsif @vista =="ordenes" %>
          <%= render 'ordenes', cliente: @cliente %>
         <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Editar', edit_cliente_path(@cliente), class: "btn btn-primary mb-4" %> |
<%= link_to 'Volver', clientes_path, class: "btn btn-secondary mb-4" %>